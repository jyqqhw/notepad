<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#a09060"
    android:id="@+id/second_linearlayout">
    <TextView
        android:id="@+id/second_detail_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/to_left"
        android:gravity="center_vertical|left"
        android:text="日记本"
        android:textSize="24sp" />
    <TextView 
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        android:layout_weight="1000"/>
    <TextView 
        android:id="@+id/second_detail_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical|right"
        android:textSize="24sp"
        android:visibility="gone"
        android:text="完成"/>
</LinearLayout>
    

    <TextView
        android:id="@+id/second_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="23424"
        android:textColor="#404040"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/second_scrollview1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/second_detail_content_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:background="@null"
            android:gravity="top"/>
    </ScrollView>

    <ScrollView
        android:id="@+id/second_scrollview2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="gone" >

        <EditText
            android:id="@+id/second_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null"
            android:textSize="18sp"
            android:gravity="top"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/second_detail_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:gravity="center"
            android:text="编辑"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/second_detail_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:gravity="center"
            android:text="删除"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>